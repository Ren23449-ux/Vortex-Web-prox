        <script>
            // State management
            let tabs = [];
            let activeTabId = null;
            let tabIdCounter = 0;
            let bookmarks = JSON.parse(
                localStorage.getItem("vortex-bookmarks") || "[]",
            );
            let quickLinks = JSON.parse(
                localStorage.getItem("vortex-quicklinks") || "[]",
            );
            let activePanelId = null;

            // Initialize
            function init() {
                createNewTab(true);
                loadBookmarks();
                updateStats();
                startClock();
                simulatePerformance();

                // URL input handler
                const urlInput = document.getElementById("url-input");
                urlInput.addEventListener("keypress", function (e) {
                    if (e.key === "Enter") {
                        handleUrlSubmit();
                    }
                });

                // Sidebar panel handlers
                document.querySelectorAll(".sidebar-icon").forEach((icon) => {
                    icon.addEventListener("click", function () {
                        const panelName = this.getAttribute("data-panel");
                        if (panelName === "home") {
                            closePanel();
                            return;
                        }
                        togglePanel(panelName);
                    });
                });
            }

            // Tab Management
            function createNewTab(isInitial = false) {
                const tabId = tabIdCounter++;
                const tab = {
                    id: tabId,
                    title: "New Tab",
                    url: "",
                    isNewTab: true,
                    history: [],
                    historyIndex: -1,
                };

                tabs.push(tab);

                // Create tab element
                const tabElement = document.createElement("div");
                tabElement.className = "tab";
                tabElement.setAttribute("data-tab-id", tabId);
                tabElement.innerHTML = `
                <span class="tab-icon">‚ö°</span>
                <span class="tab-title">${tab.title}</span>
                <span class="tab-close" onclick="closeTab(${tabId}, event)">√ó</span>
            `;
                tabElement.addEventListener("click", (e) => {
                    if (!e.target.classList.contains("tab-close")) {
                        switchTab(tabId);
                    }
                });

                const tabBar = document.getElementById("tab-bar");
                tabBar.appendChild(tabElement);

                // Create content element
                const contentElement = document.createElement("div");
                contentElement.className = "tab-content";
                contentElement.setAttribute("data-tab-id", tabId);
                contentElement.innerHTML = `
                <div class="new-tab-page">
                    <div class="vortex-logo" data-text="VORTEX">VORTEX</div>
                    <div class="search-container">
                        <input type="text" class="search-box" placeholder="Search the web..." onkeypress="handleNewTabSearch(event, ${tabId})">
                        <button class="search-btn" onclick="performNewTabSearch(${tabId})">
                            <svg viewBox="0 0 24 24">
                                <circle cx="11" cy="11" r="8"></circle>
                                <path d="m21 21-4.35-4.35"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="quick-links">
                        <a class="quick-link" onclick="navigateInTab(${tabId}, 'https://www.google.com')">
                            <div class="quick-link-icon">üîç</div>
                            <div class="quick-link-title">Google</div>
                        </a>
                        <a class="quick-link" onclick="navigateInTab(${tabId}, 'https://www.youtube.com')">
                            <div class="quick-link-icon">‚ñ∂Ô∏è</div>
                            <div class="quick-link-title">YouTube</div>
                        </a>
                        <a class="quick-link" onclick="navigateInTab(${tabId}, 'https://github.com')">
                            <div class="quick-link-icon">üíª</div>
                            <div class="quick-link-title">GitHub</div>
                        </a>
                        <div class="add-quick-link" onclick="alert('Quick link feature coming soon!')">
                            <div class="add-quick-link-icon">+</div>
                            <div class="add-quick-link-text">Add Link</div>
                        </div>
                    </div>
                </div>
            `;

                document
                    .getElementById("content-area")
                    .appendChild(contentElement);

                switchTab(tabId);
                updateStats();
            }

            function closeTab(tabId, event) {
                if (event) {
                    event.stopPropagation();
                }

                if (tabs.length === 1) {
                    return; // Don't close the last tab
                }

                const tabIndex = tabs.findIndex((t) => t.id === tabId);
                if (tabIndex === -1) return;

                tabs.splice(tabIndex, 1);

                // Remove tab element
                const tabElement = document.querySelector(
                    `.tab[data-tab-id="${tabId}"]`,
                );
                if (tabElement) {
                    tabElement.remove();
                }

                // Remove content element
                const contentElement = document.querySelector(
                    `.tab-content[data-tab-id="${tabId}"]`,
                );
                if (contentElement) {
                    contentElement.remove();
                }

                // Switch to another tab if the closed tab was active
                if (activeTabId === tabId) {
                    const newActiveTab = tabs[Math.max(0, tabIndex - 1)];
                    switchTab(newActiveTab.id);
                }

                updateStats();
            }

            function switchTab(tabId) {
                activeTabId = tabId;

                // Update tab UI
                document.querySelectorAll(".tab").forEach((tab) => {
                    tab.classList.remove("active");
                });
                const activeTab = document.querySelector(
                    `.tab[data-tab-id="${tabId}"]`,
                );
                if (activeTab) {
                    activeTab.classList.add("active");
                }

                // Update content UI
                document.querySelectorAll(".tab-content").forEach((content) => {
                    content.classList.remove("active");
                });
                const activeContent = document.querySelector(
                    `.tab-content[data-tab-id="${tabId}"]`,
                );
                if (activeContent) {
                    activeContent.classList.add("active");
                }

                // Update URL input
                const tab = tabs.find((t) => t.id === tabId);
                if (tab) {
                    document.getElementById("url-input").value = tab.url;
                    updateNavigationButtons(tab);
                }
            }

            function updateTabTitle(tabId, title) {
                const tab = tabs.find((t) => t.id === tabId);
                if (tab) {
                    tab.title = title;
                    const tabElement = document.querySelector(
                        `.tab[data-tab-id="${tabId}"] .tab-title`,
                    );
                    if (tabElement) {
                        tabElement.textContent = title;
                    }
                }
            }

            function navigateInTab(tabId, url) {
                const tab = tabs.find((t) => t.id === tabId);
                if (!tab) return;

                // Process URL
                if (!url.startsWith("http://") && !url.startsWith("https://")) {
                    url = "https://" + url;
                }

                tab.url = url;
                tab.isNewTab = false;

                // Add to history
                if (tab.historyIndex < tab.history.length - 1) {
                    tab.history = tab.history.slice(0, tab.historyIndex + 1);
                }
                tab.history.push(url);
                tab.historyIndex++;

                const contentElement = document.querySelector(
                    `.tab-content[data-tab-id="${tabId}"]`,
                );
                if (contentElement) {
                    // Show loading
                    document.getElementById("loading").classList.add("active");

                    // Extract domain for title
                    let domain = url.replace(/^https?:\/\//, "").split("/")[0];
                    updateTabTitle(tabId, domain);

                    // Create iframe for the content
                    // Note: Many sites block iframes due to X-Frame-Options
                    // For a real browser, you'd need a proper browser engine
                    contentElement.innerHTML = `
                    <iframe class="content-iframe" src="${url}" onload="hideLoading()"></iframe>
                `;
                }

                if (activeTabId === tabId) {
                    document.getElementById("url-input").value = url;
                    updateNavigationButtons(tab);
                }
            }

            function handleUrlSubmit() {
                const urlInput = document.getElementById("url-input");
                let url = urlInput.value.trim();

                if (!url) return;

                // Check if it's a search query or URL
                if (!url.includes(".") || url.includes(" ")) {
                    // It's a search query
                    url = `https://www.google.com/search?q=${encodeURIComponent(url)}&igu=1`;
                } else if (
                    !url.startsWith("http://") &&
                    !url.startsWith("https://")
                ) {
                    url = "https://" + url;
                }

                navigateInTab(activeTabId, url);
            }

            function performNewTabSearch(tabId) {
                const input = document.querySelector(
                    `.tab-content[data-tab-id="${tabId}"] .search-box`,
                );
                if (input && input.value.trim()) {
                    let query = input.value.trim();
                    let url = `https://www.google.com/search?q=${encodeURIComponent(query)}&igu=1`;
                    navigateInTab(tabId, url);
                }
            }

            function handleNewTabSearch(event, tabId) {
                if (event.key === "Enter") {
                    performNewTabSearch(tabId);
                }
            }

            function navigateToUrl(url) {
                navigateInTab(activeTabId, url);
                closePanel();
            }

            function hideLoading() {
                setTimeout(() => {
                    document
                        .getElementById("loading")
                        .classList.remove("active");
                }, 300);
            }

            // Navigation
            function goBack() {
                const tab = tabs.find((t) => t.id === activeTabId);
                if (!tab || tab.historyIndex <= 0) return;

                tab.historyIndex--;
                const url = tab.history[tab.historyIndex];
                tab.url = url;

                const contentElement = document.querySelector(
                    `.tab-content[data-tab-id="${activeTabId}"]`,
                );
                if (contentElement) {
                    contentElement.innerHTML = `
                    <iframe class="content-iframe" src="${url}" onload="hideLoading()"></iframe>
                `;
                }

                document.getElementById("url-input").value = url;
                updateNavigationButtons(tab);
            }

            function goForward() {
                const tab = tabs.find((t) => t.id === activeTabId);
                if (!tab || tab.historyIndex >= tab.history.length - 1) return;

                tab.historyIndex++;
                const url = tab.history[tab.historyIndex];
                tab.url = url;

                const contentElement = document.querySelector(
                    `.tab-content[data-tab-id="${activeTabId}"]`,
                );
                if (contentElement) {
                    contentElement.innerHTML = `
                    <iframe class="content-iframe" src="${url}" onload="hideLoading()"></iframe>
                `;
                }

                document.getElementById("url-input").value = url;
                updateNavigationButtons(tab);
            }

            function refreshPage() {
                const tab = tabs.find((t) => t.id === activeTabId);
                if (!tab || !tab.url) return;

                const iframe = document.querySelector(
                    `.tab-content[data-tab-id="${activeTabId}"] iframe`,
                );
                if (iframe) {
                    document.getElementById("loading").classList.add("active");
                    iframe.src = iframe.src;
                }
            }

            function updateNavigationButtons(tab) {
                const backBtn = document.getElementById("back-btn");
                const forwardBtn = document.getElementById("forward-btn");

                backBtn.disabled = !tab || tab.historyIndex <= 0;
                forwardBtn.disabled =
                    !tab || tab.historyIndex >= tab.history.length - 1;
            }

            // Bookmark Management
            function addBookmark() {
                const title = document
                    .getElementById("bookmark-title")
                    .value.trim();
                const url = document
                    .getElementById("bookmark-url")
                    .value.trim();

                if (!title || !url) {
                    alert("Please enter both title and URL");
                    return;
                }

                const bookmark = {
                    id: Date.now(),
                    title: title,
                    url: url.startsWith("http") ? url : "https://" + url,
                };

                bookmarks.push(bookmark);
                localStorage.setItem(
                    "vortex-bookmarks",
                    JSON.stringify(bookmarks),
                );

                document.getElementById("bookmark-title").value = "";
                document.getElementById("bookmark-url").value = "";

                loadBookmarks();
                updateStats();
            }

            function deleteBookmark(id) {
                bookmarks = bookmarks.filter((b) => b.id !== id);
                localStorage.setItem(
                    "vortex-bookmarks",
                    JSON.stringify(bookmarks),
                );
                loadBookmarks();
                updateStats();
            }

            function loadBookmarks() {
                const bookmarksList = document.getElementById("bookmarks-list");

                if (bookmarks.length === 0) {
                    bookmarksList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìö</div>
                        <div>No bookmarks yet</div>
                    </div>
                `;
                    return;
                }

                bookmarksList.innerHTML = bookmarks
                    .map(
                        (bookmark) => `
                <div class="bookmark-item" onclick="navigateToUrl('${bookmark.url}')">
                    <div class="bookmark-info">
                        <div class="bookmark-title">${bookmark.title}</div>
                        <div class="bookmark-url">${bookmark.url}</div>
                    </div>
                    <div class="bookmark-menu">
                        <div class="bookmark-menu-btn" onclick="event.stopPropagation(); toggleBookmarkMenu(${bookmark.id})">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="1"></circle>
                                <circle cx="12" cy="5" r="1"></circle>
                                <circle cx="12" cy="19" r="1"></circle>
                            </svg>
                        </div>
                        <div class="bookmark-dropdown" id="bookmark-dropdown-${bookmark.id}">
                            <div class="bookmark-dropdown-item" onclick="event.stopPropagation(); deleteBookmark(${bookmark.id})">
                                <span style="color: #ff1b54;">üóëÔ∏è</span> Delete
                            </div>
                        </div>
                    </div>
                </div>
            `,
                    )
                    .join("");
            }

            function toggleBookmarkMenu(id) {
                // Close all other dropdowns
                document.querySelectorAll(".bookmark-dropdown").forEach((d) => {
                    if (d.id !== `bookmark-dropdown-${id}`) {
                        d.classList.remove("active");
                    }
                });

                const dropdown = document.getElementById(
                    `bookmark-dropdown-${id}`,
                );
                if (dropdown) {
                    dropdown.classList.toggle("active");
                }
            }

            function toggleBookmarkCurrentPage() {
                const tab = tabs.find((t) => t.id === activeTabId);
                if (!tab || !tab.url || tab.isNewTab) return;

                const existingIndex = bookmarks.findIndex(
                    (b) => b.url === tab.url,
                );
                const btn = document.getElementById("bookmark-current-btn");

                if (existingIndex !== -1) {
                    bookmarks.splice(existingIndex, 1);
                    btn.classList.remove("bookmarked");
                } else {
                    bookmarks.push({
                        id: Date.now(),
                        title: tab.title || tab.url,
                        url: tab.url,
                    });
                    btn.classList.add("bookmarked");
                }

                localStorage.setItem(
                    "vortex-bookmarks",
                    JSON.stringify(bookmarks),
                );
                loadBookmarks();
                updateStats();
            }

            // Sidebar Panels
            function togglePanel(panelId) {
                const panel = document.getElementById(`panel-${panelId}`);
                const icon = document.querySelector(
                    `.sidebar-icon[data-panel="${panelId}"]`,
                );

                if (activePanelId === panelId) {
                    closePanel();
                    return;
                }

                // Close current panel if exists
                if (activePanelId) {
                    document
                        .getElementById(`panel-${activePanelId}`)
                        .classList.remove("active");
                    document
                        .querySelector(
                            `.sidebar-icon[data-panel="${activePanelId}"]`,
                        )
                        .classList.remove("active");
                }

                panel.classList.add("active");
                icon.classList.add("active");
                activePanelId = panelId;

                // Remove active state from home icon
                document
                    .querySelector('.sidebar-icon[data-panel="home"]')
                    .classList.remove("active");
            }

            function closePanel() {
                if (activePanelId) {
                    document
                        .getElementById(`panel-${activePanelId}`)
                        .classList.remove("active");
                    document
                        .querySelector(
                            `.sidebar-icon[data-panel="${activePanelId}"]`,
                        )
                        .classList.remove("active");
                    activePanelId = null;

                    // Set home icon as active
                    document
                        .querySelector('.sidebar-icon[data-panel="home"]')
                        .classList.add("active");
                }
            }

            // Stats & Widgets
            function updateStats() {
                document.getElementById("tabs-count").textContent = tabs.length;
                document.getElementById("bookmarks-count").textContent =
                    bookmarks.length;
            }

            function startClock() {
                setInterval(() => {
                    const now = new Date();
                    const hours = String(now.getHours()).padStart(2, "0");
                    const minutes = String(now.getMinutes()).padStart(2, "0");
                    document.getElementById("current-time").textContent =
                        `${hours}:${minutes}`;
                }, 1000);
            }

            function simulatePerformance() {
                setInterval(() => {
                    // Random CPU between 5-30%
                    const cpu = Math.floor(Math.random() * 25) + 5;
                    document.getElementById("cpu-percent").textContent =
                        `${cpu}%`;
                    document.getElementById("cpu-fill").style.width = `${cpu}%`;

                    // Random RAM between 30-60%
                    const ram = Math.floor(Math.random() * 30) + 30;
                    document.getElementById("ram-percent").textContent =
                        `${ram}%`;
                    document.getElementById("ram-fill").style.width = `${ram}%`;
                }, 3000);
            }

            // Event listeners
            document.addEventListener("click", function (e) {
                if (!e.target.closest(".bookmark-menu")) {
                    document
                        .querySelectorAll(".bookmark-dropdown")
                        .forEach((d) => {
                            d.classList.remove("active");
                        });
                }
            });

            // Start app
            init();
        </script>
    </body>
</html>
