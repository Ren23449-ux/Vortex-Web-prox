        <script>
            // App state
            let tabs = [];
            let activeTabId = null;
            let bookmarks = [];
            let activePanelId = null;
            let quickLinks = [];
            
            // Proxy State
            let currentProxy = localStorage.getItem("vortex-proxy-type") || "direct";
            let customProxyUrl = localStorage.getItem("vortex-custom-proxy") || "";

            // Initialize app
            function init() {
                // Load saved data
                const savedBookmarks = localStorage.getItem("vortex-bookmarks");
                if (savedBookmarks) {
                    bookmarks = JSON.parse(savedBookmarks);
                }

                const savedQuickLinks = localStorage.getItem("vortex-quick-links");
                if (savedQuickLinks) {
                    quickLinks = JSON.parse(savedQuickLinks);
                } else {
                    // Defaults
                    quickLinks = [
                        { title: "Google", url: "https://www.google.com", icon: "üîç" },
                        { title: "YouTube", url: "https://www.youtube.com", icon: "‚ñ∂Ô∏è" },
                        { title: "GitHub", url: "https://github.com", icon: "üíª" },
                        { title: "Discord", url: "https://discord.com", icon: "üí¨" }
                        { title: "Bing", url: "https://www.bing.com/search?q=ready+to+game",icon: "üåê"}
"}
                    ];
                }

                // Initial tab is Home Page
                createNewTab(true);
                loadBookmarks();
                startClock();
                simulatePerformance();
                updateStats();
                updateProxyUI();
            }

            // Tab Management
            function createNewTab(isFirst = false, isIncognito = false) {
                const tabId = Date.now().toString();
                
                const title = isFirst ? "Home Page" : (isIncognito ? "Incognito Tab" : "New Tab");
                
                const tab = {
                    id: tabId,
                    title: title,
                    url: "",
                    history: [],
                    historyIndex: -1,
                    isNewTab: true,
                    isIncognito: isIncognito
                };

                tabs.push(tab);

                // Create tab UI
                const tabElement = document.createElement("div");
                tabElement.className = `tab ${isIncognito ? 'incognito-tab' : ''}`;
                tabElement.dataset.tabId = tabId;
                tabElement.onclick = () => switchTab(tabId);
                
                // Incognito Icon vs Regular Icon
                const iconSvg = isIncognito 
                    ? `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 18h20"></path><path d="M12 2a5 5 0 0 0-5 5v2a5 5 0 0 0 10 0V7a5 5 0 0 0-5-5z"></path><path d="M5 14a5 5 0 1 0 14 0"></path></svg>`
                    : `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon></svg>`;

                tabElement.innerHTML = `
                    <div class="tab-icon">
                         ${iconSvg}
                    </div>
                    <div class="tab-title">${title}</div>
                    <div class="tab-close" onclick="closeTab('${tabId}', event)">√ó</div>
                `;

                // Insert before new tab button (which is after home button)
                const newTabBtn = document.querySelector(".new-tab-btn");
                document.getElementById("tab-bar").insertBefore(tabElement, newTabBtn);

                // Create content UI
                const contentElement = document.createElement("div");
                contentElement.className = "tab-content";
                contentElement.dataset.tabId = tabId;
                
                // Content for new tab page
                contentElement.innerHTML = `
                    <div class="new-tab-page">
                        <div class="vortex-logo" data-text="VORTEX">VORTEX</div>
                        ${isIncognito ? '<div style="margin-bottom: 20px; color: #a855f7;">Incognito Mode</div>' : ''}
                        <div class="search-container">
                            <input type="text" class="search-box" placeholder="${isIncognito ? 'Browse freely...' : 'Search the web...'}" onkeydown="handleNewTabSearch(event, '${tabId}')" />
                            <button class="search-btn" onclick="performNewTabSearch('${tabId}')">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <path d="m21 21-4.35-4.35"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="quick-links" id="quick-links-${tabId}">
                            <!-- Quick links rendered here -->
                        </div>
                    </div>
                `;

                document.getElementById("content-area").appendChild(contentElement);

                if (!isIncognito) {
                    renderQuickLinks(tabId);
                }
                switchTab(tabId);
                updateStats();
            }

            function openIncognitoTab() {
                createNewTab(false, true);
            }

            function closeTab(tabId, event) {
                if (event) event.stopPropagation();

                // If closing last tab, don't remove, just reset to home
                if (tabs.length === 1) {
                    goHome();
                    return;
                }

                const tabIndex = tabs.findIndex((t) => t.id === tabId);
                if (tabIndex === -1) return;

                tabs.splice(tabIndex, 1);

                // Remove UI
                document.querySelector(`.tab[data-tab-id="${tabId}"]`)?.remove();
                document.querySelector(`.tab-content[data-tab-id="${tabId}"]`)?.remove();

                // Switch if active
                if (activeTabId === tabId) {
                    const newActiveTab = tabs[Math.max(0, tabIndex - 1)];
                    switchTab(newActiveTab.id);
                }
                updateStats();
            }

            function switchTab(tabId) {
                activeTabId = tabId;

                // Update tabs
                document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
                document.querySelector(`.tab[data-tab-id="${tabId}"]`)?.classList.add("active");

                // Update content
                document.querySelectorAll(".tab-content").forEach(c => c.classList.remove("active"));
                document.querySelector(`.tab-content[data-tab-id="${tabId}"]`)?.classList.add("active");

                // Update URL bar
                const tab = tabs.find(t => t.id === tabId);
                if (tab) {
                    document.getElementById("url-input").value = tab.isNewTab ? "" : tab.url;
                    updateNavigationButtons(tab);
                    
                    // Update Bookmark button status
                    const isBookmarked = bookmarks.some(b => b.url === tab.url);
                    const btn = document.getElementById("bookmark-current-btn");
                    if(isBookmarked) btn.classList.add("bookmarked"); else btn.classList.remove("bookmarked");
                    
                    // Toggle Incognito Theme
                    if (tab.isIncognito) {
                        document.body.classList.add('incognito-mode');
                        document.querySelector('.sidebar').style.background = '#2b1120';
                        document.querySelector('.tab-bar').style.background = '#2b1120';
                    } else {
                        document.body.classList.remove('incognito-mode');
                         document.querySelector('.sidebar').style.background = '#16161a';
                        document.querySelector('.tab-bar').style.background = '#16161a';
                    }
                }
            }

            // Quick Links
            function renderQuickLinks(tabId) {
                const container = document.getElementById(`quick-links-${tabId}`);
                if (!container) return;

                let html = quickLinks.map((link, index) => `
                    <div class="quick-link" onclick="navigateInTab('${tabId}', '${link.url}')">
                        <div class="quick-link-delete" onclick="event.stopPropagation(); removeQuickLink(${index})">√ó</div>
                        <div class="quick-link-icon">${link.icon}</div>
                        <div class="quick-link-title">${link.title}</div>
                    </div>
                `).join("");

                html += `
                    <div class="add-quick-link" onclick="openAddLinkModal()">
                        <div class="add-quick-link-icon">+</div>
                        <div class="add-quick-link-text">Add Link</div>
                    </div>
                `;
                container.innerHTML = html;
            }

            function openAddLinkModal() {
                document.getElementById("add-link-modal").classList.add("active");
            }
            function closeAddLinkModal() {
                document.getElementById("add-link-modal").classList.remove("active");
                document.getElementById("quick-link-title").value = "";
                document.getElementById("quick-link-url").value = "";
            }

            function saveQuickLink() {
                const title = document.getElementById("quick-link-title").value.trim();
                let url = document.getElementById("quick-link-url").value.trim();
                const icon = document.getElementById("quick-link-icon").value.trim() || "üîó";

                if (!title || !url) { alert("Title and URL required"); return; }
                if (!url.startsWith("http")) url = "https://" + url;

                quickLinks.push({ title, url, icon });
                localStorage.setItem("vortex-quick-links", JSON.stringify(quickLinks));
                closeAddLinkModal();

                // Re-render all new tab pages
                tabs.forEach(t => {
                    if (t.isNewTab) renderQuickLinks(t.id);
                });
            }

            function removeQuickLink(index) {
                if (confirm("Remove this quick link?")) {
                    quickLinks.splice(index, 1);
                    localStorage.setItem("vortex-quick-links", JSON.stringify(quickLinks));
                    tabs.forEach(t => {
                        if (t.isNewTab) renderQuickLinks(t.id);
                    });
                }
            }

            // Navigation
            function navigateInTab(tabId, url) {
                const tab = tabs.find(t => t.id === tabId);
                if (!tab) return;

                if (!url.startsWith("http")) url = "https://" + url;

                // Proxy Logic (apply if incognito OR if user wants it globally)
                // For this implementation, we apply proxy if it is SET and we are in Incognito
                // OR if the user is using the "browse freely" feature which implies proxy usage.
                
                let finalUrl = url;
                
                if (tab.isIncognito || currentProxy !== 'direct') {
                    if (currentProxy === 'ultraviolet') {
                        // Placeholder for Ultraviolet logic
                         finalUrl = "https://uv.example.com/service/" + btoa(url); // Mock UV encoding
                         // Since we don't have a real UV backend, we'll fall back to a direct load or custom proxy
                         if (customProxyUrl) {
                              finalUrl = customProxyUrl + url;
                         } else {
                              // If no custom proxy and no real UV, just alert user or load direct
                              console.log("Using Mock Proxy for: " + url);
                              // For demonstration, let's just append a query param to show it's proxied
                              // finalUrl = url + "?proxied=true"; 
                         }
                    } else if (customProxyUrl) {
                        finalUrl = customProxyUrl + url;
                    }
                }

                tab.url = url; // Keep original URL in state for display
                tab.isNewTab = false;
                
                // History
                if (tab.historyIndex < tab.history.length - 1) {
                    tab.history = tab.history.slice(0, tab.historyIndex + 1);
                }
                tab.history.push(url);
                tab.historyIndex++;

                const contentElement = document.querySelector(`.tab-content[data-tab-id="${tabId}"]`);
                if (contentElement) {
                    document.getElementById("loading").classList.add("active");
                    
                    let domain = url;
                    try {
                        domain = new URL(url).hostname;
                    } catch(e) { domain = url; }

                    updateTabTitle(tabId, domain);

                    // Iframe
                    // Note: In a real "browse freely" scenario, this needs a backend proxy to avoid X-Frame-Options
                    // Here we use the finalUrl which might be the proxied URL
                    contentElement.innerHTML = `<iframe class="content-iframe" src="${finalUrl}" onload="hideLoading()" onerror="hideLoading()"></iframe>`;
                }

                if (activeTabId === tabId) {
                    document.getElementById("url-input").value = url;
                    updateNavigationButtons(tab);
                }
            }

            function goHome() {
                const tab = tabs.find(t => t.id === activeTabId);
                if (!tab) return;
                
                tab.isNewTab = true;
                tab.url = "";
                tab.title = tab.isIncognito ? "Incognito Tab" : "Home Page";
                
                updateTabTitle(activeTabId, tab.title);
                document.getElementById("url-input").value = "";
                
                const contentElement = document.querySelector(`.tab-content[data-tab-id="${activeTabId}"]`);
                contentElement.innerHTML = `
                    <div class="new-tab-page">
                        <div class="vortex-logo" data-text="VORTEX">VORTEX</div>
                         ${tab.isIncognito ? '<div style="margin-bottom: 20px; color: #a855f7;">Incognito Mode</div>' : ''}
                        <div class="search-container">
                            <input type="text" class="search-box" placeholder="${tab.isIncognito ? 'Browse freely...' : 'Search the web...'}" onkeydown="handleNewTabSearch(event, '${activeTabId}')" />
                            <button class="search-btn" onclick="performNewTabSearch('${activeTabId}')">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg>
                            </button>
                        </div>
                        <div class="quick-links" id="quick-links-${activeTabId}"></div>
                    </div>
                `;
                if (!tab.isIncognito) renderQuickLinks(activeTabId);
                updateNavigationButtons(tab);
            }

            function handleUrlSubmit() {
                const input = document.getElementById("url-input");
                let url = input.value.trim();
                if (!url) return;

                if (!url.includes(".") || url.includes(" ")) {
                    url = `https://www.google.com/search?q=${encodeURIComponent(url)}&igu=1`;
                }
                navigateInTab(activeTabId, url);
            }
            
            function performNewTabSearch(tabId) {
                const input = document.querySelector(`.tab-content[data-tab-id="${tabId}"] .search-box`);
                if (input && input.value.trim()) {
                    let url = `https://www.google.com/search?q=${encodeURIComponent(input.value.trim())}&igu=1`;
                    navigateInTab(tabId, url);
                }
            }
            
            function handleNewTabSearch(event, tabId) {
                if (event.key === "Enter") performNewTabSearch(tabId);
            }

            function goBack() {
                const tab = tabs.find(t => t.id === activeTabId);
                if (!tab || tab.historyIndex <= 0) return;
                tab.historyIndex--;
                navigateInTab(activeTabId, tab.history[tab.historyIndex]); 
            }

            function goForward() {
                const tab = tabs.find(t => t.id === activeTabId);
                if (!tab || tab.historyIndex >= tab.history.length - 1) return;
                tab.historyIndex++;
                navigateInTab(activeTabId, tab.history[tab.historyIndex]);
            }

            function refreshPage() {
                const tab = tabs.find(t => t.id === activeTabId);
                if (!tab || tab.isNewTab) return;
                const contentElement = document.querySelector(`.tab-content[data-tab-id="${activeTabId}"]`);
                const iframe = contentElement.querySelector("iframe");
                if (iframe) iframe.src = iframe.src;
            }

            function updateTabTitle(tabId, title) {
                const tab = tabs.find(t => t.id === tabId);
                if (tab) {
                    tab.title = title;
                    const titleEl = document.querySelector(`.tab[data-tab-id="${tabId}"] .tab-title`);
                    if (titleEl) titleEl.textContent = title;
                }
            }

            function updateNavigationButtons(tab) {
                document.getElementById("back-btn").disabled = !tab || tab.historyIndex <= 0;
                document.getElementById("forward-btn").disabled = !tab || tab.historyIndex >= tab.history.length - 1;
            }

            function hideLoading() {
                setTimeout(() => document.getElementById("loading").classList.remove("active"), 300);
            }

            // Mods
            function openMods() {
                document.getElementById("mods-modal").classList.add("active");
            }
            function closeMods() {
                document.getElementById("mods-modal").classList.remove("active");
            }
            
            // Proxy Modal
            function openProxyModal() {
                 document.getElementById("proxy-modal").classList.add("active");
                 document.getElementById("custom-proxy-input").value = customProxyUrl;
                 updateProxyUI();
            }
            function closeProxyModal() {
                 document.getElementById("proxy-modal").classList.remove("active");
            }
            
            function selectProxy(type) {
                currentProxy = type;
                localStorage.setItem("vortex-proxy-type", type);
                updateProxyUI();
            }
            
            function saveCustomProxy() {
                const val = document.getElementById("custom-proxy-input").value.trim();
                customProxyUrl = val;
                localStorage.setItem("vortex-custom-proxy", val);
                alert("Custom proxy saved!");
            }
            
            function updateProxyUI() {
                document.querySelectorAll(".proxy-option").forEach(el => el.classList.remove("selected"));
                if (currentProxy === 'direct') document.getElementById("proxy-direct")?.classList.add("selected");
                if (currentProxy === 'ultraviolet') document.getElementById("proxy-ultraviolet")?.classList.add("selected");
            }

            // Panels
            function togglePanel(panelId) {
                const panel = document.getElementById(`panel-${panelId}`);
                const icon = document.querySelector(`.sidebar-icon[data-panel="${panelId}"]`);
                
                if (activePanelId === panelId) {
                    closePanel();
                } else {
                    if (activePanelId) closePanel();
                    panel.classList.add("active");
                    icon.classList.add("active");
                    activePanelId = panelId;
                    
                    if (panelId === "bookmarks") loadBookmarks();
                }
            }

            function closePanel() {
                if (activePanelId) {
                    document.getElementById(`panel-${activePanelId}`).classList.remove("active");
                    document.querySelector(`.sidebar-icon[data-panel="${activePanelId}"]`).classList.remove("active");
                    activePanelId = null;
                }
            }

            // Bookmarks
            function loadBookmarks() {
                const list = document.getElementById("bookmarks-list");
                if (!list) return;

                if (bookmarks.length === 0) {
                    list.innerHTML = `<div style="text-align:center; padding: 20px; color: #555;">No bookmarks yet</div>`;
                    return;
                }

                list.innerHTML = bookmarks.map((b, i) => `
                    <div style="background: #26262b; padding: 10px; margin-bottom: 5px; border-radius: 6px; display: flex; justify-content: space-between; align-items: center;">
                        <div style="cursor: pointer; flex: 1" onclick="navigateInTab('${activeTabId}', '${b.url}')">
                            <div style="font-weight: 500">${b.title}</div>
                            <div style="font-size: 11px; color: #888; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 200px;">${b.url}</div>
                        </div>
                        <button style="background: none; border: none; color: #ef4444; cursor: pointer;" onclick="deleteBookmark(${i})">√ó</button>
                    </div>
                `).join("");
            }

            function addBookmark() {
                const title = document.getElementById("bookmark-title").value || "Untitled";
                const url = document.getElementById("bookmark-url").value;
                
                if (!url) return;
                
                bookmarks.push({ title, url });
                localStorage.setItem("vortex-bookmarks", JSON.stringify(bookmarks));
                loadBookmarks();
                
                document.getElementById("bookmark-title").value = "";
                document.getElementById("bookmark-url").value = "";
                
                const tab = tabs.find(t => t.id === activeTabId);
                if (tab && tab.url === url) {
                    document.getElementById("bookmark-current-btn").classList.add("bookmarked");
                }
            }
            
            function toggleBookmarkCurrentPage() {
                const tab = tabs.find(t => t.id === activeTabId);
                if (!tab || tab.isNewTab) return;
                
                const index = bookmarks.findIndex(b => b.url === tab.url);
                if (index !== -1) {
                    bookmarks.splice(index, 1);
                    document.getElementById("bookmark-current-btn").classList.remove("bookmarked");
                } else {
                    bookmarks.push({ title: tab.title || tab.url, url: tab.url });
                    document.getElementById("bookmark-current-btn").classList.add("bookmarked");
                }
                localStorage.setItem("vortex-bookmarks", JSON.stringify(bookmarks));
                if (activePanelId === "bookmarks") loadBookmarks();
            }

            function deleteBookmark(index) {
                bookmarks.splice(index, 1);
                localStorage.setItem("vortex-bookmarks", JSON.stringify(bookmarks));
                loadBookmarks();
            }
            
            // Sidebar toggle
            function toggleSidebar() {
                document.getElementById("sidebar").classList.toggle("expanded");
            }
            
            // Utilities
            function startClock() {
                setInterval(() => {
                    const now = new Date();
                    document.getElementById("current-time").textContent = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                }, 1000);
            }
            
            function updateStats() {
                document.getElementById("tabs-count").textContent = tabs.length;
                document.getElementById("bookmarks-count").textContent = bookmarks.length;
            }
            
            function simulatePerformance() {
                setInterval(() => {
                    const cpu = Math.floor(Math.random() * 30) + 5;
                    const ram = Math.floor(Math.random() * 40) + 20;
                    
                    document.getElementById("cpu-percent").textContent = cpu + "%";
                    document.getElementById("cpu-fill").style.width = cpu + "%";
                    
                    document.getElementById("ram-percent").textContent = ram + "%";
                    document.getElementById("ram-fill").style.width = ram + "%";
                }, 2000);
            }
            
            function clearData() {
                if (confirm("Clear all data (Bookmarks, Quick Links, Settings)?")) {
                    localStorage.removeItem("vortex-bookmarks");
                    localStorage.removeItem("vortex-quick-links");
                    localStorage.removeItem("vortex-proxy-type");
                    localStorage.removeItem("vortex-custom-proxy");
                    location.reload();
                }
            }

            // Start
            init();
        </script>
    </body>
</html>
